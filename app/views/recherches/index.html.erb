<h1>Listing recherches</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recherches.each do |recherch| %>
      <tr>
        <td><%= link_to 'Show', recherch %></td>
        <td><%= link_to 'Edit', edit_recherch_path(recherch) %></td>
        <td><%= link_to 'Destroy', recherch, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

