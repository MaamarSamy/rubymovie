<!DOCTYPE html>
<html>
<head>
  <title>Rubymovie</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<header class="navbar-text pull-right">
		<% if @title %>
			<p class="title"> <%= @title %> </p>
		<% end %>
		<% if user_signed_in? %>
			<p class="log">Logged in as <strong><%= current_user.email %></strong>.
			<%= link_to 'Editer mon profil', edit_user_registration_path, :class => 'navbar-link' %> |
			<%= link_to "Deconnexion", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %> |
			<%= link_to "Recherche", controller: "/searches", action: "index"  %> |
			<%= link_to "Ma Liste", controller: "/listes", action: "index"  %>
		<% else %>
			<%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %> |
			<%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %> |
		<% end %>
			</p>
	</header>
	<content>
		<% if notice %>
		  <p class="alert alert-success"><%= notice %></p>
		<% end %>
		<% if alert %>
		  <p class="alert alert-danger"><%= alert %></p>
		<% end %>
		<%= yield %>
	</content>

</body>
</html>
