<h1>Search#index</h1>
<p>Find me in app/views/search/index.html.erb</p>

<%= form_tag(:controller => "search", :action => "result") do %>
  <%= label_tag(:q, "Nom du film:") %>
  <%= text_field_tag('search') %>
  <%= submit_tag("Search") %>
<% end %>

<table>
  <tr>
    <th>Nom</th>
    <th>Poster</th>
	<th>Note</th>
  </tr>

	<% @test["results"].each do |films| %>
	  <tr>
		<td><%= films["title"] %></td>
		<td><%= image_tag("http://image.tmdb.org/t/p/w154/" + films["poster_path"], :alt => "Affiche du film") %></td>
		<% if @dejadansList.include?(films["id"]) == true %>
			<td> Ce film est déjà dans votre liste </td>
		<% else %>
			<td><%= link_to "Ajouter ce film", controller: "liste", action: "add", id: films["id"] %></td>
		<% end %>
	  </tr>
	<% end %>
	
</table>
